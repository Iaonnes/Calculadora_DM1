<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.juanjesus.calculadora_dm1.MainActivity">

    <TextView
        android:background="#e6dcdcdc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/pantalla"
        android:fontFamily="@string/status_bar_notification_info_overflow"
        android:textColor="#090000"
        android:textSize="5dp"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/pantalla"
        android:layout_below="@+id/pantalla">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/exp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="10dp"
                 />
            <Button
                android:id="@+id/n7"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                />
            <Button
                android:id="@+id/n4"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                 />
            <Button
                android:id="@+id/n1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                />
            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="."
                android:textSize="30dp"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/sqrt"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                 />
            <Button
                android:id="@+id/n8"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                 />
            <Button
                android:id="@+id/n5"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                 />
            <Button
                android:id="@+id/n2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                />
            <Button
                android:id="@+id/n0"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="20dp"
                 />

        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                />

            <Button
                android:id="@+id/n9"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                />
            <Button
                android:id="@+id/n6"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                 />
            <Button
                android:id="@+id/n3"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                />
            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                 />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                />
            <Button
                android:id="@+id/mult"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                />
            <Button
                android:id="@+id/rest"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="30dp"
                 />
            <Button
                android:id="@+id/sum"
                android:layout_width="wrap_content"
                android:layout_height="91dp"
                android:textSize="30dp"
               />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
