<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.juanjesus.calculadora_dm1.MainActivity">

    <TextView
        android:background="#767473"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:id="@+id/pantalla"
        android:fontFamily="@string/status_bar_notification_info_overflow"
        android:textColor="#ffffff"
        android:textSize="65dp"
        android:textAlignment="textEnd"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/layout1"
        android:layout_alignStart="@+id/layout1" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:background="#ffffff"
        android:gravity="top|center"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/pantalla"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.20">


            <Button
                android:id="@+id/exp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="50dp"
                android:textColor="#888383"
                android:background="@drawable/porc"
                android:layout_margin="2dp" />
            <Button
                android:id="@+id/n7"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="45dp"
                android:textColor="#888383"
                android:background="@drawable/siete"
                android:layout_margin="2dp" />
            <Button
                android:id="@+id/n4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="45dp"
                android:textColor="#888383"
                android:background="@drawable/cuatro"
                android:layout_margin="2dp" />
            <Button
                android:id="@+id/n1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="45dp"
                android:textColor="#888383"
                android:background="@drawable/uno"
                android:layout_margin="2dp" />
            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="50dp"
                android:textColor="#888383"
                android:background="@drawable/point"
                android:layout_margin="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.20">


            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="50dp"
                android:textColor="#888383"
                android:background="@drawable/div"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/n8"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="45dp"
                android:textColor="#888383"
                android:background="@drawable/ocho"
                android:layout_margin="2dp" />
            <Button
                android:id="@+id/n5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="45dp"
                android:textColor="#888383"
                android:background="@drawable/cinco"
                android:layout_margin="2dp" />
            <Button
                android:id="@+id/n2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="40dp"
                android:textColor="#888383"
                android:background="@drawable/dos"
                android:layout_margin="2dp" />
            <Button
                android:id="@+id/n0"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="50dp"
                android:textColor="#888383"
                android:background="@drawable/cero"
                android:layout_margin="2dp" />

        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.20">

            <Button
                android:id="@+id/ac"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="60dp"
                android:textColor="#888383"
                android:background="@drawable/c"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/n9"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="45dp"
                android:textColor="#888383"
                android:background="@drawable/nueve"
                android:layout_margin="2dp" />
            <Button
                android:id="@+id/n6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="45dp"
                android:textColor="#888383"
                android:background="@drawable/seis"
                android:layout_margin="2dp" />
            <Button
                android:id="@+id/n3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="45dp"
                android:textColor="#888383"
                android:background="@drawable/tres"
                android:layout_margin="2dp" />
            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="50dp"
                android:textColor="#888383"
                android:background="@drawable/igual"
                android:layout_margin="2dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.20">

            <Button
                android:id="@+id/sqrt"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="50dp"
                android:background="@drawable/raiz"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/mult"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="50dp"
                android:textColor="#888383"
                android:background="@drawable/mult"
                android:layout_margin="2dp" />
            <Button
                android:id="@+id/rest"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="50dp"
                android:textColor="#888383"
                android:background="@drawable/rest"
                android:layout_margin="2dp" />
            <Button
                android:id="@+id/sum"
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:textSize="50dp"
                android:textColor="#888383"
                android:background="@drawable/suma"
                android:clickable="true"
                android:layout_margin="2dp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
